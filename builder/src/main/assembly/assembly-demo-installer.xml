<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>demo-installer</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>

        <fileSet>
            <directory>${project.basedir}/src/main/standalone-demo</directory>
            <outputDirectory>teiid-dashbuilder-demo</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/src/main/standalone-demo/scripts</directory>
            <outputDirectory>teiid-dashbuilder-demo</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/src/main/standalone-demo/WEB-INF</directory>
            <outputDirectory>teiid-dashbuilder-demo</outputDirectory>
            <includes>
                <include>realm.properties</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/target</directory>
            <outputDirectory>teiid-dashbuilder-demo</outputDirectory>
            <includes>
                <include>teiid-dashbuilder-demo.war</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/src/main/standalone-demo/db</directory>
            <outputDirectory>teiid-dashbuilder-demo/db</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/src/main/standalone-demo/log</directory>
            <outputDirectory>teiid-dashbuilder-demo/log</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

    </fileSets>


    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.mortbay.jetty:jetty-runner:jar</include>
            </includes>
            <outputDirectory>teiid-dashbuilder-demo</outputDirectory>
            <outputFileNameMapping>jetty-runner.jar</outputFileNameMapping>
            <useStrictFiltering>true</useStrictFiltering>
        </dependencySet>
    </dependencySets>


</assembly>